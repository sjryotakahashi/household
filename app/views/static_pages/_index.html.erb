<h1>My Kakeibo</h1>


<%= search_form_for(@q, url: root_path) do |f| %>
  <%= f.label :balance_cont, "収支" %>
  <%= f.select :balance_cont, [["収入"], ["支出"]],  :include_blank => true %>
  
  <%= f.date_field :settlement_date_gteq %>
~
  <%= f.date_field :settlement_date_lteq %>
    
  <%= f.label :description_cont, "内容" %>
  <%= f.text_field :description_cont %>
    
  <%= f.submit "Search", class: "btn btn-large btn-primary" %>
<% end %>

<div class="panel panel-default row" id="result">
  <div class="panel-body">
  <div class="col-sm-6"></div>
  <div class="col-sm-2"><p>収入：<span style="color:blue;"><%= @income %></span></p></div>
  <div class="col-sm-2"><p>支出：<span style="color:red;"><%= @spending %></span></p></div>
  <% if @income - @spending >= 0 %>
    <div class="col-sm-2"><p>収支：<span style="color:blue;"><%= @income - @spending %></span></p></div>
  <% else %>
    <div class="col-sm-2"><p>収支：<span style="color:red;"><%= @income - @spending %></span></p></div>
  <% end %>
  </div>
</div>


<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="col-md-2">日付</th>
        <th class="col-md-1">区分</th>
        <th class="col-md-5">内容</th>
        <th class="col-md-1">収入</th>
        <th class="col-md-1">支出</th>
        <th class="col-md-2" colspan="2"></th>
      </tr>
    </thead>
  </table>
</div>
<div class="table-responsive" id="board">
  <table class="table table-hover">
    <tbody>
      <%= render @payments %>
    </tbody>
  </table>
</div>

