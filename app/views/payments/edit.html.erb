<div class="title-kakeibo">
  <h1>データを編集する</h1>
</div>

<div class="row">
  <div class="col-xs-5 col-xs-offset-3">
    <%= form_for(@payment) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
        <div class="field">
          <%= f.label :日付 %>
          <%= f.date_field :settlement_date, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :区分 %>
          <%= f.select :balance, [["収入"], ["支出"]],  :include_blank => true %>
        </div>
        <div class="field">
          <%= f.label :内容 %>
          <%= f.text_field :description, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :金額 %>
          <%= f.number_field :price, class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit "更新", class: "btn btn-large btn-success" %>
      </div>
    <% end %>
  </div>
</div>