<h1>Payments#index</h1>
<p>Find me in app/views/payments/index.html.erb</p>


<!--入力フォーム部分-->
<%= form_for(@payment) do |f| %>

<!--フォームとsubmitボタンを書く-->
  <%= f.label :settlement_date %>
  <%= f.date_field :settlement_date, class: 'form-control' %>
  
  <%= f.label :balance %>
  <%= f.text_field :balance, class: 'form-control' %>
  
  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>

  <%= f.label :price %>
  <%= f.number_field :price, class: 'form-control' %>

  <%= f.submit "Create", class: "btn btn-large btn-primary" %>
<% end %>


<!--一覧表示-->
<div class="container">
<table class="table row">
  <tr>
    <td>日付</td>
    <td>収支</td>
    <td>内容</td>
    <td>金額</td>
  </tr>
  <%= render @payments %>
</table>
</div>