<% if logged_in? %>

<div class="title-kakeibo">
  <h1>Create Kakeibo</h1>
</div>

<div class="row">
  <div class="col-md-5 col-md-offset-3">
    <%= form_for(@payment) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.label :日付 %>
        <%= f.date_field :settlement_date, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :収支 %>
        <%= f.select :balance, [["収入"], ["支出"]],  :include_blank => true %>
      </div>
      <div class="field">
        <%= f.label :内容 %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :金額 %>
        <%= f.number_field :price, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit "Create", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>


<br>


<%= will_paginate %>

<div class="container">
  <div class="table-responsive">
    <table class="table table-row table-hover">
      <thead>
        <tr>
          <th class="col-md-3">日付</th>
          <th class="col-md-3">収支</th>
          <th class="col-md-3">内容</th>
          <th class="col-md-2">収入</th>
          <th class="col-md-2">支出</th>
          <th class="col-md-1" colspan="2"></th>
        </tr>
      </thead>
      <%= render @payments %>
    </table>
  </div>
</div>

<%= will_paginate %>


<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Kakeibo</h1>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>