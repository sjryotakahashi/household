<h1>Household account book</h1>



<%= form_for(@payment) do |f| %>
  <div class="field">
    <%= f.label :日付 %>
    <%= f.date_field :settlement_date, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :収支 %>
    <%= f.select :balance, [["収入"], ["支出"]],  :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :内容 %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :金額 %>
    <%= f.number_field :price, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit "Create", class: "btn btn-large btn-primary" %>
  </div>
<% end %>

<br>

<div class="container">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>日付</th>
          <th>収支</th>
          <th>内容</th>
          <th>金額</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <%= render @payments %>
    </table>
  </div>
</div>